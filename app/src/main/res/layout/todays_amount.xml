<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="?attr/bgColor"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="14dp"
        android:layout_rowWeight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="?attr/cardColor">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_weight="0.19">

        <TextView
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:text="Total:"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="25sp"
            android:paddingLeft="10sp"
            android:gravity="end|right"
            android:textColor="?attr/textColorMain"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/total_textView"
            android:layout_row="0"
            android:layout_column="1"
            android:paddingLeft="10dp"
            android:textSize="25sp"
            android:textColor="?attr/textColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Breakfast:"
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25sp"
            android:paddingLeft="10sp"
            android:layout_marginTop="20dp"
            android:textColor="?attr/textColorMain"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="36dp"
            android:id="@+id/bfast_textView"
            android:layout_row="1"
            android:layout_column="1"
            android:paddingLeft="10dp"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:textColor="?attr/textColor"/>

        <TextView
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:text="Lunch:"
            android:id="@+id/textView6"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="25sp"
            android:paddingLeft="10sp"
            android:gravity="end|right"
            android:layout_marginTop="20dp"
            android:textColor="?attr/textColorMain"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="36dp"
            android:id="@+id/lunch_textView"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25sp"
            android:layout_marginTop="20sp"
            android:paddingLeft="10dp"
            android:textColor="?attr/textColor"/>

        <TextView
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:text="Dinner:"
            android:id="@+id/textView7"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="25sp"
            android:paddingLeft="10sp"
            android:gravity="end|right"
            android:layout_marginTop="20dp"
            android:textColor="?attr/textColorMain"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="36dp"
            android:id="@+id/dinner_textView"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="20sp"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:textColor="?attr/textColor"/>

        <TextView
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:text="@string/others"
            android:id="@+id/textView13"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="25sp"
            android:paddingLeft="10sp"
            android:gravity="end|right"
            android:layout_marginTop="20dp"
            android:textColor="?attr/textColorMain"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="36dp"
            android:id="@+id/others_textView"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="20sp"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:textColor="?attr/textColor"/>
    </GridLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0" >
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="?attr/submitButton"
        android:onClick="update"
        android:layout_weight=".50"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="bottom"
        />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="?attr/cancelButton"
        android:onClick="delete"
        android:layout_weight=".50"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="bottom" />
        </LinearLayout>

</LinearLayout>